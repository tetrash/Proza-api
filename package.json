{
  "name": "Proza-api",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:tetrash/Proza-api.git",
  "author": "Karol Szymanowski <szyma.karol@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:server": "cd server && yarn build",
    "build": "yarn build:server",
    "test:server": "cd server && yarn test",
    "test": "yarn test:server",
    "lint:server": "cd server && yarn lint",
    "lint": "yarn lint:server",
    "release": "standard-version"
  },
  "workspaces": [
    "server",
    "dashboard"
  ],
  "devDependencies": {
    "lint-staged": "^10.5.1",
    "husky": "^4.3.0",
    "standard-version": "^9.0.0",
    "eslint": "^7.13.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "server/**/*.ts": [
      "eslint --fix"
    ]
  }
}
